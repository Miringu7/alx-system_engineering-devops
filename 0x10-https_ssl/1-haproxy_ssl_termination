global
        log /dev/log    local0
	stats socket /run/haproxy/admin.sock mode 660 level admin

defaults
        log     global
        mode    http
        option  httplog
	timeout connect  10s
	timeout client  30s
	timeout server  30s

frontend miringu-tech-frontend
	bind *:80
	bind *:443 ssl crt /etc/haproxy/certs/miringu.tech.pem
	http-request redirect scheme https unless { ssl_fc }
	http-request set-header X-Forwarded-Proto https
	default_backend miringu-tech-backend

backend miringu-tech-backend
	balance roundrobin
    server 531476-web-01 100.25.196.221:443 check
    server 531476-web-02 52.91.134.184 check
